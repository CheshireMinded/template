{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Environment Schema",
  "type": "object",
  "properties": {
    "APP_ENV": { "type": "string", "enum": ["development", "staging", "production"] },
    "APP_BASE_URL": { "type": "string", "format": "uri" },
    "API_BASE_URL": { "type": "string", "format": "uri" },
    "NODE_ENV": { "type": "string", "enum": ["development", "production", "test"] },
    "PORT": { "type": "number", "minimum": 1, "maximum": 65535 },
    "CORS_ORIGIN": { "type": "string", "format": "uri" },
    "LOG_LEVEL": { "type": "string", "enum": ["debug", "info", "warn", "error"] }
  },
  "required": ["APP_ENV", "APP_BASE_URL", "NODE_ENV"],
  "additionalProperties": true
}
