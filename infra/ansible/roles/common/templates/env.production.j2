NODE_ENV=production
PORT=3000
CORS_ORIGIN={{ cors_origin | default('http://localhost') }}
APP_NAME=backend-api
APP_VERSION=1.0.0
LOG_LEVEL=info
AUTH_JWT_SECRET={{ jwt_secret.stdout }}
DB_TYPE=postgres
DATABASE_URL=postgresql://{{ postgres_user | default('web_platform_user') }}:{{ postgres_password | default('change_me_in_production') }}@{{ postgres_host | default('postgres') }}:5432/{{ postgres_db | default('web_platform_prod') }}
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_MS=60000

