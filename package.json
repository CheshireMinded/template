{
  "name": "web-platform-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "install:apps": "npm install --workspaces",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "lint:all": "bash ./scripts/lint-all.sh || npm run lint",
    "test:all": "bash ./scripts/test-all.sh || npm run test",
    "build:all": "bash ./scripts/build-all.sh || npm run build",
    "security:audit": "npm audit --audit-level=high --workspaces || true",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "contract:test": "dredd",
    "test:coverage": "npm run test:coverage --workspaces --if-present"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "prettier": "^3.0.0"
  }
}

